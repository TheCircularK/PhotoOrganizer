<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.96.3 -->
<interface>
  <!-- interface-name preferences.ui -->
  <requires lib="gtk" version="4.18"/>
  <requires lib="libadwaita" version="1.6"/>
  <template class="PhotoOrganizerPreferences" parent="AdwPreferencesDialog">
    <child>
      <object class="AdwPreferencesPage">
        <child>
          <object class="AdwPreferencesGroup">
            <property name="description">Choose how your photo files will be named</property>
            <property name="title">File Naming</property>
            <child>
              <object class="AdwActionRow">
                <property name="subtitle">Select a preset or enter custom pattern</property>
                <property name="title">Filename Pattern</property>
                <child type="suffix">
                  <object class="GtkComboBox" id="filename_combo">
                    <property name="valign">center</property>
                    <property name="width-request">200</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwEntryRow" id="filename_entry">
                <property name="text">YYYYMMDD-HHmmss-MS</property>
                <property name="title">Custom Pattern</property>
                <child type="suffix">
                  <object class="GtkButton">
                    <property name="icon-name">dialog-information-symbolic</property>
                    <property name="tooltip-text">Click to see available tokens</property>
                    <property name="valign">center</property>
                    <signal name="clicked" handler="on_filename_help_clicked"/>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title">Preview</property>
                <child type="suffix">
                  <object class="GtkLabel" id="filename_preview">
                    <property name="label">20250115-143025-123.jpg</property>
                    <attributes>
                      <attribute name="weight" value="bold"/>
                    </attributes>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="description">Choose how your folders will be organized</property>
            <property name="title">Folder Structure</property>
            <child>
              <object class="AdwActionRow">
                <property name="subtitle">Select a preset or enter custom pattern</property>
                <property name="title">Folder Pattern</property>
                <child type="suffix">
                  <object class="GtkComboBox" id="folder_combo">
                    <property name="valign">center</property>
                    <property name="width-request">200</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwEntryRow" id="folder_entry">
                <property name="text">YYYY/MM-Month</property>
                <property name="title">Custom Pattern</property>
                <child type="suffix">
                  <object class="GtkButton">
                    <property name="icon-name">dialog-information-symbolic</property>
                    <property name="tooltip-text">Click to see available tokens</property>
                    <property name="valign">center</property>
                    <signal name="clicked" handler="on_folder_help_clicked"/>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title">Preview</property>
                <child type="suffix">
                  <object class="GtkLabel" id="folder_preview">
                    <property name="label">2025/01-January</property>
                    <attributes>
                      <attribute name="weight" value="bold"/>
                    </attributes>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
